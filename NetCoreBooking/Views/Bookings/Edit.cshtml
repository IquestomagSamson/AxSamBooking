@model Booking_Room.Models.Booking

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sửa lịch đăng ký phòng họp</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="booking_id" />
            <div class="form-group col-md-12">
                <label asp-for="booking_title" class="control-label"></label>
                <input asp-for="booking_title" class="form-control" style="font-size:1vw" />
                <span asp-validation-for="booking_title" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="start_time" class="control-label"></label>
                <input asp-for="start_time" class="form-control" style="font-size:1vw" />
                <span asp-validation-for="start_time" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="end_time" class="control-label"></label>
                <input asp-for="end_time" class="form-control" style="font-size:1vw" />
                <span asp-validation-for="end_time" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="participants" class="control-label"></label>
                <textarea  asp-for="participants" class="form-control" style="font-size:1vw"></textarea>
                <span asp-validation-for="participants" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="note" class="control-label"></label>
                <textarea  asp-for="note" class="form-control" style="font-size:1vw" ></textarea>
                <span asp-validation-for="note" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="room_id" class="control-label"></label>
                <select asp-for="room_id" class="form-control" style="font-size:1vw" asp-items="ViewBag.room_id"></select>
                <span asp-validation-for="room_id" class="text-danger"></span>
            </div>
            @*<div class="form-group">
            <label asp-for="users_id" class="control-label"></label>
            <select asp-for="users_id" class="form-control" style="font-size:1vw" />
            <span asp-validation-for="users_id" class="text-danger"></span>
        </div>*@
            <div class="form-group col-md-6">
                <label asp-for="users_id" class="control-label"></label>
                <select asp-for="users_id" class="form-control" asp-items="ViewBag.users_id" style="font-size:1vw"></select>
                <span asp-validation-for="users_id" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <input type="submit" value="Lưu" class="btn btn-info" style="font-size:1vw; color:white;" />
            </div>
        </form>
    </div>
</div>

<a asp-action="Index" type="button" class="btn btn-link" style="font-size:1vw; color:dodgerblue">Quay về trang danh sách</a>
<br />
<br />
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
