@model Booking_Room.Models.Room

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href='https://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css'>
<style>
#title {
  /*position: absolute;*/
  top: 50%;
  left: 0;
  right: 0;
  color: #FFF;
  text-align: left;
  font-family: "lato", sans-serif;
  font-weight: 300;
  font-size: 50px;
  letter-spacing: 10px;
  margin-top: -60px;
  padding-left: 100px;
}
#title span {
  background: -webkit-linear-gradient(white, #38495a);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
</style>
<br /><br />

<div class="row">
    <div class="col-md-4"><div id="title"><span>Create</span></div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="room_id" class="control-label"></label>
                <input asp-for="room_id" class="form-control" placeholder="Your room ID...." style="font-size:1vw" />
                <span asp-validation-for="room_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="room_name" class="control-label"></label>
                <input asp-for="room_name" class="form-control" placeholder="Your room name...." style="font-size:1vw" />
                <span asp-validation-for="room_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="capacity" class="control-label"></label>
                <input asp-for="capacity" class="form-control" placeholder="Room's capacity...." style="font-size:1vw" />
                <span asp-validation-for="capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-info" style="font-size:1vw; color:white" />
            </div>
        </form>
    </div>
</div>

<a asp-action="Index" type="button" class="btn btn-link" style="font-size:1vw; color:dodgerblue">Quay về trang danh sách</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
