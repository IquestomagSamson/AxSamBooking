@model Booking_Room.Models.Room

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sửa thông tin phòng họp</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="room_id" />
            <div class="form-group">
                <label asp-for="room_name" class="control-label"></label>
                <input asp-for="room_name" class="form-control" style="font-size:1vw"/>
                <span asp-validation-for="room_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="capacity" class="control-label"></label>
                <input asp-for="capacity" class="form-control"  style="font-size:1vw"/>
                <span asp-validation-for="capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-info" style="font-size:1vw; color: white" />
            </div>
        </form>
    </div>
</div>

<a asp-action="Index" type="button" class="btn btn-link" style="font-size:1vw; color:dodgerblue">Quay về trang danh sách</a>
<br />
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<br />