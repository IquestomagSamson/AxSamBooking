@model Booking_Room.Models.User_s

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sửa thông tin người dùng</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User_id" />
            <div class="form-group">
                <label asp-for="User_name" class="control-label"></label>
                <input asp-for="User_name" class="form-control" style="font-size:1vw" />
                <span asp-validation-for="User_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-info" style="font-size:1vw; color:white" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-link" style="font-size:1vw; color:dodgerblue">Quay về trang danh sách</a>
</div>

<br />
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
